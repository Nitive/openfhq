.quests
	padding-top 15px

	& > div
		display inline-table
		width 50%
		@media (max-width: hide-nav-menu + 230px)
			width 100%

	article
		position relative
		margin 0 10px 20px
		height 178px
		overflow hidden

		background-color #f4f4f4
		border-radius 4px

	h4
		position relative
		margin 0
		margin-left 17px
		padding-top 7px
		color link-color
		font-weight light
		letter-spacing -.03rem
		&:after
			margin-left 10px
			content 'by sea-kg'
			color #c0c5ce
		&:before
			content 'forensic 200'
			position absolute
			font-weight bold
			font-size 12px
			letter-spacing .02rem
			bottom -8px
			left 10px
			color #0e775f
	sup
		top -.9em
		left .2em
		font-size 12px
		color #0e775f

	p
		padding 14px 29px 0

		font-size 21px
		line-height 1.2
		lines-to-show = 3

		display block /* Fallback for non-webkit */
		display -webkit-box
		max-width 400px
		height @font-size * @line-height * lines-to-show /* Fallback for non-webkit */
		margin 0 auto
		-webkit-line-clamp lines-to-show
		-webkit-box-orient vertical
		overflow hidden
		text-overflow ellipsis

	footer
		position absolute
		height 32px
		width 100%
		background-color #e4e4e4
		bottom 0
		svg
			position absolute
			width 34px
			height 100%
			left "calc(50% - %s)" % (@width / 2)
