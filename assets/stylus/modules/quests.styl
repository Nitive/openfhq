nav-menu-width = 227px
info-menu-width = 227px
max-screen = 1440px
hide-info-menu = 1100px
hide-nav-menu = 600px
footer-height = 300px
fast = .3s

html, body
	width 100%

.menu-toggle
	height 100px
	width 100px
	background-color #444
	cursor pointer
	@media (min-width: hide-nav-menu)
		display none

.wrap
	position relative
	height 100%
	margin 0 auto
	width 100%
	max-width max-screen
	overflow-x hidden

.nav-menu
	position fixed
	height 100%
	width nav-menu-width
	background-color #0ca

.info-menu
	position fixed
	top 0
	height 100%
	width info-menu-width
	background-color #ff0

	// always in right
	right "calc((100% - %s) / 2)" % max-screen
	@media (max-width: max-screen)
		right 0

	transition margin fast ease
	@media (max-width: hide-info-menu)
		margin-right "-%s" % info-menu-width

.main-container.opened-menu
	@media (max-width: hide-nav-menu)
		margin-left nav-menu-width
		width 100%

.main-container
	position relative
	height 100%
	transition margin fast ease, width fast ease
	margin-left nav-menu-width
	width "calc(100% - %s)" % (nav-menu-width + info-menu-width)
	@media (max-width: hide-info-menu)
		width "calc(100% - %s)" % nav-menu-width
	@media (max-width: hide-nav-menu)
		margin-left 0
		width 100%

header
	height 60px
	width 100%
	background-color red

main
	background-color green

