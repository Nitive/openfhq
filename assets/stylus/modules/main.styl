@import 'nav-menu'
@import 'page-header'
@import 'rating'
@import 'quests'
@import 'search'
@import 'games'

body
	background-color main-light-bg

.wrap
	position relative
	margin 0 auto
	max-width max-screen
	@media (max-width: hide-info-menu)
		overflow-x hidden
		overflow-y scroll
		-webkit-overflow-scrolling touch

.main-container
	background-color main-light-bg
	position relative
	transition margin fast, width fast
	margin-left nav-menu-width
	width "calc(100% - %s)" % (nav-menu-width + info-menu-width)
	@media (max-width: hide-info-menu)
		width "calc(100% - %s)" % nav-menu-width
	@media (max-width: hide-nav-menu)
		margin-left 0
		width 100%

.opened-nav-menu
	@media (max-width: hide-nav-menu)
		margin-left nav-menu-width
		width 100%

.content-wrapper
	padding-top header-height
	overflow-y scroll
	overflow-x hidden
	height "calc(100vh - %s)" % header-height
	&::-webkit-scrollbar
		display none

.content
	box-sizing border-box
	min-height "calc(100% - %s)" % footer-height
	background-color main-light-bg
	transition padding normal
	padding 0
	@media (min-width: hide-nav-menu - 100px) and (max-width: hide-nav-menu)
		padding 0 30px 5px
	@media (min-width: hide-nav-menu + 150px)
		padding 0 30px 5px
	@media (min-width: hide-nav-menu + 230px) and (max-width: hide-nav-menu + 430px)
		padding 0

.page-footer
	height footer-height
	background-color red
