.games
	background-color main-light-bg
	padding-top 20px
.game
	margin-bottom 20px
	position relative
	background-color #f4f4f4
	border-radius 4px
	min-height 280px

	&__title
		position relative
		margin 0
		padding 10px 0 20px 20px
		font-weight 400
		color link-color
		&:after
			content attr(data-orgs)
			color main-light-bg
		&:before
			content attr(data-info)
			position absolute
			font-weight bold
			font-size 12px
			letter-spacing .02rem
			bottom 5px
			margin-left 10px
			color dim-link

	&__logo
		position absolute
		height 150px
		width 150px
		margin-left 25px
		border-radius 5px

	&__text
		padding-left 200px

	&__choose-btn
		position absolute
		border-radius 4px
		width 146px
		text-align center
		padding 0
		font-size 24px
		margin 160px 25px

		&--disable
			cursor default
			color main-light-bg
			border-color main-light-bg
			&:hover
				color main-light-bg
				background-color transparent
