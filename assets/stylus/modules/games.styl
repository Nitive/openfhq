.games
	background-color main-light-bg
	padding 20px 5px 0
.game
	margin-bottom 20px
	position relative
	background-color #f4f4f4
	border-radius 4px
	min-height 300px

	&__title
		position relative
		margin 0
		padding 10px 0 20px 20px
		font-weight 400
		color link-color
		&:after
			content attr(data-orgs)
			color main-light-bg
		&:before
			content attr(data-info)
			position absolute
			font-weight bold
			font-size 12px
			letter-spacing .02rem
			bottom 5px
			margin-left 10px
			color dim-link

	&__text
		padding 20px
		@media (max-width: hide-nav-menu)
			padding-top 50px

	&__imgblock
		float left
		margin 0 20px 0 25px

	&__logo
		height 150px
		width 150px
		border-radius 5px
		@media (max-width: hide-nav-menu)
			display none

	&__choose-btn
		border-radius 4px
		width 146px
		text-align center
		padding 0
		font-size 24px

		&--disable
			cursor default
			color main-light-bg
			border-color main-light-bg
			&:hover
				color main-light-bg
				background-color transparent
