.page-header
	z-index 1
	position absolute
	height header-height
	background-color main-dark-bg
	color #f4f4f4

	transition width fast
	width 100%
	h2
		position absolute
		display inline-block
		font-size 29px
		font-weight light
		text-transform capitalize
		margin-top -1px
		center-of header-height, @font-size * 1.5

.navicon
	width 30px
	height 25px
	padding 0 16px
	background-color alpha(#000, .1)
	center-of header-height, @height
	cursor pointer
	@media (min-width: hide-nav-menu)
		display none

.page-icon
	fill #f4f4f4
	width 60px
	height 60px
