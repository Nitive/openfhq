nav-menu-width = 227px // slideout padding
info-menu-width = 225px
max-screen = 1440px
hide-info-point = 1100px
fast = .3s

html, body
	height 100%
	width 100%

#toggle
	height 100px
	width 100px
	background-color #444
	cursor pointer

.wrap
	position relative
	height 100%
	margin 0 auto
	width 100%
	max-width max-screen

.nav-menu
	position fixed
	height 100%
	width nav-menu-width
	background-color #0ca

.info-menu
	position fixed
	top 0
	height 100%
	width info-menu-width
	background-color #ff0

	// always in right
	right "calc((100% - %s) / 2)" % max-screen
	@media (max-width: max-screen)
		right 0

	transition margin fast ease
	@media (max-width: hide-info-point)
		margin-right "-%s" % info-menu-width

.main-container
	position relative
	height 100%
	transition width fast ease
	margin-left nav-menu-width
	width "calc(100% - %s)" % (nav-menu-width + info-menu-width)
	@media (max-width: hide-info-point)
		width "calc(100% - %s)" % nav-menu-width

header
	height 60px
	width 100%
	background-color red

main
	background-color green

.quest
	display inline-block
	height 200px
	width 380px
	background-color #aaa
	margin-top 10px
